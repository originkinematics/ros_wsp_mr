		-model $(arg ardrone_3)"/>
  </group>


  <!-- FOURTH -->
  <arg name="ardrone_4"              default="ardrone_4"/>  
  <arg name="ardrone_4_sdf_robot_file" value="$(find ardrone_gazebo)/models/ardrone_gazebo/ardrone_gazebo.sdf"/>
