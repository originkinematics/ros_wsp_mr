  <arg name="ardrone_4_pitch"	     default="0.0"/>
  <arg name="ardrone_4_yaw"	     default="0.0"/>
  

  <group ns="$(arg ardrone_4)">
    <param name="robot_description" command="$(find xacro)/xacro '$(find ardrone_gazebo)/urdf/ardrone_gazebo.urdf'" /> 
    
