      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg ardrone_4)" />
    </node>
    
    <node name="$(arg ardrone_4)_spawn_urdf" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
